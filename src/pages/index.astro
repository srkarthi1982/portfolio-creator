---
import { AvButton, AvCard, AvContainer, AvTimeline } from "@ansiversa/components";
import AppShell from "../layouts/AppShell.astro";

const title = "Portfolio Creator – Ansiversa";
const description = "Craft clean, client-ready portfolios and publish them in minutes.";

const layouts = [
  {
    name: "Case Study",
    description: "Problem, process, and impact with structured storytelling.",
  },
  {
    name: "Gallery",
    description: "Visual-first layout to highlight screenshots and deliverables.",
  },
  {
    name: "Minimal",
    description: "Simple, focused design for tight, readable summaries.",
  },
  {
    name: "Story",
    description: "Narrative flow that reads like a polished project recap.",
  },
];

const portfolioTimelineItems = [
  {
    date: "Pillar 01",
    title: "Public sharing controls",
    body: "Publish, unlist, or keep drafts private with simple visibility rules.",
  },
  {
    date: "Pillar 02",
    title: "Multiple portfolios per user",
    body: "Build different collections for clients, roles, or industries.",
  },
  {
    date: "Pillar 03",
    title: "Structured project builder",
    body: "Keep goals, approach, and results organized without clutter.",
  },
  {
    date: "Pillar 04",
    title: "Clean, responsive output",
    body: "Layouts designed for quick scanning and polished presentation.",
  },
  {
    date: "Pillar 05",
    title: "Fast editing workflow",
    body: "Update entries and publish changes without rebuilding everything.",
  },
  {
    date: "Pillar 06",
    title: "Consistent branding",
    body: "Keep your work cohesive across every project you ship.",
  },
];
---

<AppShell title={title} description={description}>
  <section class="av-hero">
    <AvContainer size="default">
      <div class="av-hero__grid">
        <div class="av-hero__content av-auth-stack-md">
          <div class="av-kicker">
            <span>Career · Ansiversa Mini App</span>
          </div>
          <h1 class="av-section-title">Portfolio Creator</h1>
          <p class="av-section-lead">Craft clean, client-ready portfolios and publish them in minutes.</p>
          <ul class="av-list">
            <li>Structured project stories without messy docs</li>
            <li>Multiple portfolios with visibility controls</li>
            <li>Share a polished public page with one click</li>
          </ul>
          <div class="av-row-wrap">
            <AvButton href="/app/portfolios">Create Portfolio</AvButton>
            <AvButton href="#layouts" variant="ghost">View Layouts</AvButton>
          </div>
          <p class="av-text-soft">Focused stories. Clean design. Ready to share.</p>
        </div>

        <AvCard variant="soft" className="av-auth-stack-sm">
          <p class="av-kicker">Portfolio flow</p>
          <h2 class="av-card-heading">Create → Structure → Publish</h2>
          <ol class="av-list">
            <li>1. Name your portfolio</li>
            <li>2. Add projects and details</li>
            <li>3. Publish or keep it unlisted</li>
          </ol>
          <div class="av-row-between">
            <p class="av-text-soft">Layouts: 4 clean styles</p>
            <p class="av-text-soft">Sharing: Public + unlisted</p>
          </div>
        </AvCard>
      </div>
    </AvContainer>
  </section>

  <section class="av-section" id="layouts">
    <AvContainer size="default">
      <div class="av-section-header">
        <h2 class="av-section-title">Layouts</h2>
        <p class="av-section-lead">Four layouts that balance story, visuals, and clarity.</p>
      </div>
      <div class="av-grid-auto av-grid-auto--260">
        {layouts.map((layout) => (
          <AvCard variant="soft" className="av-auth-stack-sm av-card--fullheight">
            <h3 class="av-card-heading">{layout.name}</h3>
            <p class="av-text-soft">{layout.description}</p>
          </AvCard>
        ))}
      </div>
    </AvContainer>
  </section>

  <section class="av-section">
    <AvContainer size="default">
      <div class="av-section-header">
        <h2 class="av-section-title">Why Portfolio Creator</h2>
        <p class="av-section-lead">Everything you need to publish a premium portfolio without busywork.</p>
      </div>
      <AvTimeline items={portfolioTimelineItems} />
    </AvContainer>
  </section>

  <section class="av-section">
    <AvContainer size="default">
      <div class="av-section-header">
        <div class="av-kicker"><span>How it works</span></div>
        <h2 class="av-section-title">Create → Structure → Publish</h2>
        <p class="av-section-lead">Three steps from blank page to shareable portfolio.</p>
      </div>
      <ol class="av-steps">
        <li class="av-step">
          <span class="av-step-number">1</span>
          <div class="av-step-body">
            <h3 class="av-card-heading">Create a portfolio</h3>
            <p>Name the collection and decide the audience.</p>
          </div>
        </li>
        <li class="av-step">
          <span class="av-step-number">2</span>
          <div class="av-step-body">
            <h3 class="av-card-heading">Structure each project</h3>
            <p>Capture goals, responsibilities, and outcomes in minutes.</p>
          </div>
        </li>
        <li class="av-step">
          <span class="av-step-number">3</span>
          <div class="av-step-body">
            <h3 class="av-card-heading">Publish</h3>
            <p>Share a clean public page or keep it unlisted.</p>
          </div>
        </li>
      </ol>
    </AvContainer>
  </section>

  <section class="av-section">
    <AvContainer size="default">
      <AvCard variant="soft" className="av-row-between av-card--fullheight">
        <div class="av-auth-stack-xxs">
          <h2 class="av-section-title">Ready to build your portfolio?</h2>
          <p class="av-text-soft">Start a portfolio and publish your work with a clean public page.</p>
        </div>
        <AvButton href="/app/portfolios">Create Portfolio</AvButton>
      </AvCard>
    </AvContainer>
  </section>
</AppShell>
